<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de fondo azul -->
    <item android:bottom="4dp" android:right="4dp" android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#ADD8E6"/> <!-- Color azul claro -->
            <corners android:radius="80dp"/> <!-- Redondea las esquinas -->
        </shape>
    </item>
    <!-- Capa de borde dorado -->
    <item android:bottom="2dp" android:right="2dp" android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gris_claro"/> <!-- Color negro para el trazo -->
            <stroke
                android:width="2dp"
                android:color="#FFD700"/> <!-- Color dorado para el borde -->
            <corners android:radius="6dp"/> <!-- Redondea las esquinas -->
        </shape>
    </item>
</layer-list>